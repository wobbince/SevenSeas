@model SevenSeas.BEANS.PassengerCruiseBEAN

@{
    ViewBag.Title = "AddPassengerToCruise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddPassengerToCruise</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PassengerCruiseBEAN</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CruiseID)

        <div class="form-group">
            @Html.LabelFor(model => model.CruiseName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CruiseName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CruiseName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PassengerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownList("PassengerID", (IEnumerable<SelectListItem>)ViewBag.Passengers)
                @Html.HiddenFor(model => model.PassengerID)

                @Html.ValidationMessageFor(model => model.PassengerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
